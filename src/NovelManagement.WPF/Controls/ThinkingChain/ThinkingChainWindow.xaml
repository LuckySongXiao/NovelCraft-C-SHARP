<Window x:Class="NovelManagement.WPF.Controls.ThinkingChain.ThinkingChainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AI思维过程"
        Width="420"
        Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 窗口阴影效果 -->
        <DropShadowEffect x:Key="WindowShadow" 
                         Color="Black" 
                         Direction="315" 
                         ShadowDepth="5" 
                         Opacity="0.3" 
                         BlurRadius="10"/>
    </Window.Resources>

    <!-- 主容器 -->
    <Border Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8"
            Effect="{StaticResource WindowShadow}"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                  Background="{DynamicResource PrimaryHueMidBrush}"
                  CornerRadius="8,8,0,0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="Brain"
                                           Width="16" Height="16"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="12,0,8,0"/>

                    <!-- 标题 -->
                    <TextBlock Grid.Column="1"
                             x:Name="TitleTextBlock"
                             Text="AI思维过程"
                             FontSize="12"
                             FontWeight="Medium"
                             Foreground="White"
                             VerticalAlignment="Center"
                             TextTrimming="CharacterEllipsis"/>

                    <!-- 进度条 -->
                    <ProgressBar Grid.Column="2"
                               x:Name="ProgressBar"
                               Width="50"
                               Height="3"
                               Margin="8,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignLinearProgressBar}"
                               Foreground="White"
                               Background="#40FFFFFF"/>

                    <!-- 置顶按钮 -->
                    <Button Grid.Column="3"
                          x:Name="TopMostButton"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Width="20" Height="20"
                          Padding="0"
                          Foreground="White"
                          Click="TopMostButton_Click"
                          ToolTip="切换置顶">
                        <materialDesign:PackIcon x:Name="TopMostIcon" 
                                               Kind="PinOutline" 
                                               Width="12" Height="12"/>
                    </Button>

                    <!-- 最小化按钮 -->
                    <Button Grid.Column="4"
                          x:Name="MinimizeButton"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Width="20" Height="20"
                          Padding="0"
                          Foreground="White"
                          Click="MinimizeButton_Click"
                          ToolTip="最小化">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="12" Height="12"/>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="5"
                          x:Name="CloseButton"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Width="20" Height="20"
                          Padding="0"
                          Foreground="White"
                          Click="CloseButton_Click"
                          ToolTip="关闭">
                        <materialDesign:PackIcon Kind="Close" Width="12" Height="12"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <Grid Grid.Row="1">
                <ContentPresenter x:Name="ContentPresenter"/>
            </Grid>
        </Grid>
    </Border>

    <!-- 调整大小手柄 -->
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Grid>
                <ContentPresenter/>
                
                <!-- 右下角调整大小手柄 -->
                <Thumb x:Name="ResizeThumb"
                     Width="12"
                     Height="12"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0,0,2,2"
                     Cursor="SizeNWSE"
                     DragDelta="ResizeThumb_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate>
                            <Grid Background="Transparent">
                                <Path Data="M 0,8 L 8,0 M 2,8 L 8,2 M 4,8 L 8,4"
                                    Stroke="{DynamicResource MaterialDesignBodyLight}"
                                    StrokeThickness="1"/>
                            </Grid>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </ControlTemplate>
    </Window.Template>
</Window>

<UserControl x:Class="NovelManagement.WPF.Controls.ThinkingChain.ThinkingChainPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="12"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="Transparent"
             FontFamily="{DynamicResource MaterialDesignFont}"
             MaxWidth="400"
             MaxHeight="600">

    <UserControl.Resources>
        <!-- 思维步骤状态颜色转换器 -->
        <Style x:Key="StepStatusStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="2,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Pending">
                    <Setter Property="BorderBrush" Value="#FFA500"/>
                    <Setter Property="Background" Value="#FFF8F0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Processing">
                    <Setter Property="BorderBrush" Value="#1E90FF"/>
                    <Setter Property="Background" Value="#F0F8FF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Completed">
                    <Setter Property="BorderBrush" Value="#32CD32"/>
                    <Setter Property="Background" Value="#F0FFF0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Failed">
                    <Setter Property="BorderBrush" Value="#FF4500"/>
                    <Setter Property="Background" Value="#FFF0F0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 淡入动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- 淡出动画 -->
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="0" To="-20" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TranslateTransform/>
    </UserControl.RenderTransform>

    <!-- 主容器 -->
    <materialDesign:Card x:Name="MainCard"
                       Padding="0"
                       materialDesign:ShadowAssist.ShadowDepth="Depth3"
                       materialDesign:ShadowAssist.ShadowEdges="All"
                       Background="{DynamicResource MaterialDesignPaper}"
                       Opacity="0.95">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                  Background="{DynamicResource PrimaryHueMidBrush}"
                  CornerRadius="4,4,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 思维链图标 -->
                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="Brain"
                                           Width="20" Height="20"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="12,8,8,8"/>

                    <!-- 标题文本 -->
                    <TextBlock Grid.Column="1"
                             x:Name="TitleTextBlock"
                             Text="AI思维过程"
                             FontWeight="Medium"
                             FontSize="14"
                             Foreground="White"
                             VerticalAlignment="Center"
                             TextTrimming="CharacterEllipsis"/>

                    <!-- 进度指示器 -->
                    <ProgressBar Grid.Column="2"
                               x:Name="ProgressBar"
                               Width="60"
                               Height="4"
                               Margin="8,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignLinearProgressBar}"
                               Foreground="White"
                               Background="#40FFFFFF"/>

                    <!-- 最小化按钮 -->
                    <Button Grid.Column="3"
                          x:Name="MinimizeButton"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Width="24" Height="24"
                          Padding="0"
                          Foreground="White"
                          Click="MinimizeButton_Click"
                          ToolTip="最小化">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Button Grid.Column="4"
                          x:Name="CloseButton"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Width="24" Height="24"
                          Padding="0"
                          Foreground="White"
                          Click="CloseButton_Click"
                          ToolTip="关闭">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 思维步骤列表 -->
            <ScrollViewer Grid.Row="1"
                        x:Name="StepsScrollViewer"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        MaxHeight="400"
                        Padding="8">
                
                <ItemsControl x:Name="StepsItemsControl"
                            ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StepStatusStyle}"
                                  CornerRadius="4"
                                  Margin="0,2">
                                <Border.RenderTransform>
                                    <TranslateTransform/>
                                </Border.RenderTransform>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 步骤图标 -->
                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="{Binding TypeIcon}"
                                                           Width="16" Height="16"
                                                           VerticalAlignment="Top"
                                                           Margin="0,2,8,0"
                                                           Foreground="{Binding StatusColor}"/>

                                    <!-- 步骤内容 -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Title}"
                                                 FontWeight="Medium"
                                                 FontSize="11"
                                                 Margin="0,0,0,2"/>
                                        
                                        <TextBlock Text="{Binding Content}"
                                                 FontSize="10"
                                                 TextWrapping="Wrap"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                 MaxHeight="60"
                                                 TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- 置信度指示器 -->
                                        <StackPanel Orientation="Horizontal" 
                                                  Margin="0,4,0,0"
                                                  Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="置信度: "
                                                     FontSize="9"
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding ConfidencePercentage}"
                                                     FontSize="9"
                                                     FontWeight="Medium"
                                                     Foreground="{Binding StatusColor}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 状态指示器 -->
                                    <StackPanel Grid.Column="2" 
                                              VerticalAlignment="Center"
                                              Margin="8,0,0,0">
                                        
                                        <!-- 处理中动画 -->
                                        <materialDesign:PackIcon Kind="Loading"
                                                               Width="12" Height="12"
                                                               Foreground="{Binding StatusColor}"
                                                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <materialDesign:PackIcon.RenderTransform>
                                                <RotateTransform/>
                                            </materialDesign:PackIcon.RenderTransform>
                                            <materialDesign:PackIcon.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                           From="0" To="360" Duration="0:0:1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </materialDesign:PackIcon.Triggers>
                                        </materialDesign:PackIcon>

                                        <!-- 完成状态图标 -->
                                        <materialDesign:PackIcon Kind="Check"
                                                               Width="12" Height="12"
                                                               Foreground="{Binding StatusColor}"
                                                               Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    
                    <!-- 添加步骤时的动画 -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="0" To="1" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                           From="20" To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>
            </ScrollViewer>

            <!-- 底部状态栏 -->
            <Border Grid.Row="2"
                  Background="{DynamicResource MaterialDesignDivider}"
                  Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 状态文本 -->
                    <TextBlock Grid.Column="0"
                             x:Name="StatusTextBlock"
                             Text="准备中..."
                             FontSize="10"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             VerticalAlignment="Center"/>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal">
                        
                        <Button x:Name="PauseButton"
                              Style="{StaticResource MaterialDesignIconButton}"
                              Width="20" Height="20"
                              Padding="0"
                              ToolTip="暂停/继续"
                              Click="PauseButton_Click">
                            <materialDesign:PackIcon x:Name="PauseIcon" 
                                                   Kind="Pause" 
                                                   Width="12" Height="12"/>
                        </Button>

                        <Button x:Name="ExportButton"
                              Style="{StaticResource MaterialDesignIconButton}"
                              Width="20" Height="20"
                              Padding="0"
                              ToolTip="导出思维链"
                              Click="ExportButton_Click">
                            <materialDesign:PackIcon Kind="Export" Width="12" Height="12"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:Card>
</UserControl>

<UserControl x:Class="NovelManagement.WPF.Views.ProfessionSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountTie" 
                                           Foreground="White" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="职业体系管理" 
                             Foreground="White" 
                             FontSize="24" 
                             FontWeight="Medium" 
                             VerticalAlignment="Center" 
                             Margin="16,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="AddProfession_Click"
                            ToolTip="新建职业体系">
                        <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="ImportProfession_Click"
                            ToolTip="导入职业数据">
                        <materialDesign:PackIcon Kind="Import" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="ExportProfession_Click"
                            ToolTip="导出职业数据">
                        <materialDesign:PackIcon Kind="Export" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="AIAssistant_Click"
                            ToolTip="AI助手">
                        <materialDesign:PackIcon Kind="Robot" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：职业体系列表 -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 搜索栏 -->
                    <Border Grid.Row="0" Padding="16,16,16,8">
                        <TextBox x:Name="SearchTextBox"
                                materialDesign:HintAssist.Hint="搜索职业体系..."
                                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextChanged="SearchTextBox_TextChanged"/>
                    </Border>

                    <!-- 筛选器 -->
                    <Border Grid.Row="1" Padding="16,0,16,8">
                        <StackPanel>
                            <ComboBox x:Name="CategoryFilterComboBox"
                                     materialDesign:HintAssist.Hint="职业类别"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectionChanged="CategoryFilter_SelectionChanged">
                                <ComboBoxItem Content="全部类别"/>
                                <ComboBoxItem Content="修炼职业"/>
                                <ComboBoxItem Content="生活职业"/>
                                <ComboBoxItem Content="战斗职业"/>
                                <ComboBoxItem Content="辅助职业"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- 职业体系列表 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ProfessionListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                          BorderThickness="0,0,0,1" 
                                          Padding="16,12"
                                          Background="Transparent"
                                          Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectProfessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Grid.Column="0" 
                                                                       Kind="AccountTie" 
                                                                       Width="20" 
                                                                       Height="20" 
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                
                                                <TextBlock Grid.Column="1" 
                                                         Text="{Binding Name}" 
                                                         FontWeight="Medium" 
                                                         FontSize="14"
                                                         Margin="8,0,0,0"
                                                         VerticalAlignment="Center"/>

                                                <Border Grid.Column="2" 
                                                      Background="{DynamicResource PrimaryHueLightBrush}"
                                                      CornerRadius="8"
                                                      Padding="6,2">
                                                    <TextBlock Text="{Binding Category}" 
                                                             Foreground="White" 
                                                             FontSize="10"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Grid.Row="1" 
                                                     Text="{Binding Description}" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     FontSize="12"
                                                     Margin="28,4,0,0"
                                                     TextWrapping="Wrap"/>

                                            <StackPanel Grid.Row="2" 
                                                      Orientation="Horizontal" 
                                                      Margin="28,4,0,0">
                                                <TextBlock Text="等级数量: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding LevelCount}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                                <TextBlock Text=" | 技能数量: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Text="{Binding SkillCount}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 统计信息 -->
                    <Border Grid.Row="3" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,8">
                        <StackPanel>
                            <TextBlock Text="职业体系统计" 
                                     FontWeight="Medium" 
                                     FontSize="12" 
                                     Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="总数量: "/>
                                        <Run Text="{Binding TotalCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="修炼职业: "/>
                                        <Run Text="{Binding CultivationCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="生活职业: "/>
                                        <Run Text="{Binding LifeCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="战斗职业: "/>
                                        <Run Text="{Binding CombatCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 右侧：职业详情编辑区域 -->
            <materialDesign:Card Grid.Column="1" Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailPanel" Margin="24">
                        <!-- 默认提示 -->
                        <StackPanel x:Name="EmptyStatePanel" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Visibility="Visible">
                            <materialDesign:PackIcon Kind="AccountTieOutline" 
                                                   Width="64" 
                                                   Height="64" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="选择一个职业体系查看详情" 
                                     FontSize="16" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,16,0,0"/>
                            <TextBlock Text="或点击上方的 + 按钮创建新的职业体系" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- 职业详情编辑面板 -->
                        <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                            <!-- 基本信息 -->
                            <TextBlock Text="基本信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="ProfessionNameTextBox"
                                        materialDesign:HintAssist.Hint="职业体系名称"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>

                                <ComboBox Grid.Column="2"
                                         x:Name="ProfessionCategoryComboBox"
                                         materialDesign:HintAssist.Hint="职业类别"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="修炼职业"/>
                                    <ComboBoxItem Content="生活职业"/>
                                    <ComboBoxItem Content="战斗职业"/>
                                    <ComboBoxItem Content="辅助职业"/>
                                </ComboBox>
                            </Grid>

                            <TextBox x:Name="ProfessionDescriptionTextBox"
                                    materialDesign:HintAssist.Hint="职业体系描述"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinLines="3"
                                    MaxLines="5"
                                    Margin="0,0,0,24"/>

                            <!-- 职业等级 -->
                            <TextBlock Text="职业等级" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                  BorderThickness="1" 
                                  CornerRadius="4" 
                                  Padding="16"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                 Text="等级列表" 
                                                 FontWeight="Medium"/>
                                        
                                        <Button Grid.Column="1" 
                                              Style="{StaticResource MaterialDesignIconButton}"
                                              Click="AddLevel_Click"
                                              ToolTip="添加等级">
                                            <materialDesign:PackIcon Kind="Plus"/>
                                        </Button>
                                    </Grid>

                                    <ItemsControl x:Name="LevelListControl" Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                      BorderThickness="0,0,0,1" 
                                                      Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox Grid.Column="0" 
                                                               Text="{Binding Level}" 
                                                               materialDesign:HintAssist.Hint="等级"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>
                                                        
                                                        <TextBox Grid.Column="1" 
                                                               Text="{Binding Name}" 
                                                               materialDesign:HintAssist.Hint="等级名称"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>
                                                        
                                                        <TextBox Grid.Column="2" 
                                                               Text="{Binding Requirements}" 
                                                               materialDesign:HintAssist.Hint="晋升要求"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>

                                                        <Button Grid.Column="3" 
                                                              Style="{StaticResource MaterialDesignIconButton}"
                                                              Click="RemoveLevel_Click"
                                                              CommandParameter="{Binding}"
                                                              ToolTip="删除等级">
                                                            <materialDesign:PackIcon Kind="Delete" 
                                                                                   Foreground="{DynamicResource ValidationErrorBrush}"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- 操作按钮 -->
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right" 
                                      Margin="0,16,0,0">
                                <Button Content="保存" 
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Click="SaveProfession_Click"
                                      Margin="0,0,8,0"/>
                                <Button Content="取消" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Click="CancelEdit_Click"
                                      Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>

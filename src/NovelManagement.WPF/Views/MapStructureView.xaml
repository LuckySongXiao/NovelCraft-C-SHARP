<UserControl x:Class="NovelManagement.WPF.Views.MapStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Map" 
                                           Foreground="White" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="地图结构管理" 
                             Foreground="White" 
                             FontSize="24" 
                             FontWeight="Medium" 
                             VerticalAlignment="Center" 
                             Margin="16,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="AddMap_Click"
                            ToolTip="新建地图">
                        <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="ImportMap_Click"
                            ToolTip="导入地图数据">
                        <materialDesign:PackIcon Kind="Import" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="ExportMap_Click"
                            ToolTip="导出地图数据">
                        <materialDesign:PackIcon Kind="Export" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="AIAssistant_Click"
                            ToolTip="AI助手">
                        <materialDesign:PackIcon Kind="Brain" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：地图列表 -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 搜索栏 -->
                    <Border Grid.Row="0" Padding="16,16,16,8">
                        <TextBox x:Name="SearchTextBox"
                                materialDesign:HintAssist.Hint="搜索地图..."
                                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextChanged="SearchTextBox_TextChanged"/>
                    </Border>

                    <!-- 筛选器 -->
                    <Border Grid.Row="1" Padding="16,0,16,8">
                        <StackPanel>
                            <ComboBox x:Name="MapLevelFilterComboBox"
                                     materialDesign:HintAssist.Hint="地图层级"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectionChanged="MapLevelFilter_SelectionChanged"
                                     Margin="0,0,0,8">
                                <ComboBoxItem Content="全部层级"/>
                                <ComboBoxItem Content="世界地图"/>
                                <ComboBoxItem Content="大陆地图"/>
                                <ComboBoxItem Content="区域地图"/>
                                <ComboBoxItem Content="城市地图"/>
                                <ComboBoxItem Content="建筑地图"/>
                            </ComboBox>
                            <ComboBox x:Name="TerrainFilterComboBox"
                                     materialDesign:HintAssist.Hint="地形类型"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectionChanged="TerrainFilter_SelectionChanged">
                                <ComboBoxItem Content="全部地形"/>
                                <ComboBoxItem Content="平原"/>
                                <ComboBoxItem Content="山脉"/>
                                <ComboBoxItem Content="森林"/>
                                <ComboBoxItem Content="沙漠"/>
                                <ComboBoxItem Content="海洋"/>
                                <ComboBoxItem Content="湖泊"/>
                                <ComboBoxItem Content="冰原"/>
                                <ComboBoxItem Content="火山"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- 地图列表 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MapListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                          BorderThickness="0,0,0,1" 
                                          Padding="16,12"
                                          Background="Transparent"
                                          Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectMapCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Grid.Column="0" 
                                                                       Kind="Map" 
                                                                       Width="20" 
                                                                       Height="20" 
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                
                                                <TextBlock Grid.Column="1" 
                                                         Text="{Binding Name}" 
                                                         FontWeight="Medium" 
                                                         FontSize="14"
                                                         Margin="8,0,0,0"
                                                         VerticalAlignment="Center"/>

                                                <Border Grid.Column="2" 
                                                      Background="{DynamicResource PrimaryHueLightBrush}"
                                                      CornerRadius="8"
                                                      Padding="6,2">
                                                    <TextBlock Text="{Binding Level}" 
                                                             Foreground="White" 
                                                             FontSize="10"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Grid.Row="1" 
                                                     Text="{Binding Description}" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     FontSize="12"
                                                     Margin="28,4,0,0"
                                                     TextWrapping="Wrap"/>

                                            <StackPanel Grid.Row="2" 
                                                      Orientation="Horizontal" 
                                                      Margin="28,4,0,0">
                                                <TextBlock Text="地形: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding TerrainType}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                                <TextBlock Text=" | 气候: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Text="{Binding ClimateType}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 统计信息 -->
                    <Border Grid.Row="3" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,8">
                        <StackPanel>
                            <TextBlock Text="地图统计" 
                                     FontWeight="Medium" 
                                     FontSize="12" 
                                     Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="总数量: "/>
                                        <Run Text="{Binding TotalCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="世界地图: "/>
                                        <Run Text="{Binding WorldMapCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="区域地图: "/>
                                        <Run Text="{Binding RegionMapCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="城市地图: "/>
                                        <Run Text="{Binding CityMapCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 右侧：地图详情编辑区域 -->
            <materialDesign:Card Grid.Column="1" Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailPanel" Margin="24">
                        <!-- 默认提示 -->
                        <StackPanel x:Name="EmptyStatePanel" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Visibility="Visible">
                            <materialDesign:PackIcon Kind="MapOutline" 
                                                   Width="64" 
                                                   Height="64" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="选择一个地图查看详情" 
                                     FontSize="16" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,16,0,0"/>
                            <TextBlock Text="或点击上方的 + 按钮创建新的地图" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- 地图详情编辑面板 -->
                        <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                            <!-- 基本信息 -->
                            <TextBlock Text="基本信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="MapNameTextBox"
                                        materialDesign:HintAssist.Hint="地图名称"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>

                                <ComboBox Grid.Column="2"
                                         x:Name="MapLevelComboBox"
                                         materialDesign:HintAssist.Hint="地图层级"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="世界地图"/>
                                    <ComboBoxItem Content="大陆地图"/>
                                    <ComboBoxItem Content="区域地图"/>
                                    <ComboBoxItem Content="城市地图"/>
                                    <ComboBoxItem Content="建筑地图"/>
                                </ComboBox>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                         x:Name="TerrainTypeComboBox"
                                         materialDesign:HintAssist.Hint="主要地形"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="平原"/>
                                    <ComboBoxItem Content="山脉"/>
                                    <ComboBoxItem Content="森林"/>
                                    <ComboBoxItem Content="沙漠"/>
                                    <ComboBoxItem Content="海洋"/>
                                    <ComboBoxItem Content="湖泊"/>
                                    <ComboBoxItem Content="冰原"/>
                                    <ComboBoxItem Content="火山"/>
                                    <ComboBoxItem Content="混合地形"/>
                                </ComboBox>

                                <ComboBox Grid.Column="2"
                                         x:Name="ClimateTypeComboBox"
                                         materialDesign:HintAssist.Hint="气候类型"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="温带"/>
                                    <ComboBoxItem Content="热带"/>
                                    <ComboBoxItem Content="寒带"/>
                                    <ComboBoxItem Content="亚热带"/>
                                    <ComboBoxItem Content="干旱"/>
                                    <ComboBoxItem Content="湿润"/>
                                    <ComboBoxItem Content="高原"/>
                                    <ComboBoxItem Content="海洋性"/>
                                    <ComboBoxItem Content="大陆性"/>
                                </ComboBox>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="DimensionIdTextBox"
                                        materialDesign:HintAssist.Hint="所属维度"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>

                                <TextBox Grid.Column="2"
                                        x:Name="ParentMapTextBox"
                                        materialDesign:HintAssist.Hint="父级地图"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>
                            </Grid>

                            <TextBox x:Name="MapDescriptionTextBox"
                                    materialDesign:HintAssist.Hint="地图描述"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinLines="3"
                                    MaxLines="5"
                                    Margin="0,0,0,24"/>

                            <!-- 地理信息 -->
                            <TextBlock Text="地理信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="AreaSizeTextBox"
                                        materialDesign:HintAssist.Hint="面积大小"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="2"
                                        x:Name="CoordinatesTextBox"
                                        materialDesign:HintAssist.Hint="坐标位置"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </Grid>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="ElevationTextBox"
                                        materialDesign:HintAssist.Hint="海拔高度"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <ComboBox Grid.Column="2"
                                         x:Name="DangerLevelComboBox"
                                         materialDesign:HintAssist.Hint="危险等级"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="安全"/>
                                    <ComboBoxItem Content="低危"/>
                                    <ComboBoxItem Content="中危"/>
                                    <ComboBoxItem Content="高危"/>
                                    <ComboBoxItem Content="极危"/>
                                    <ComboBoxItem Content="禁区"/>
                                </ComboBox>
                            </Grid>

                            <!-- 资源分布 -->
                            <TextBlock Text="资源分布" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                  BorderThickness="1" 
                                  CornerRadius="4" 
                                  Padding="16"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                 Text="资源列表" 
                                                 FontWeight="Medium"/>
                                        
                                        <Button Grid.Column="1" 
                                              Style="{StaticResource MaterialDesignIconButton}"
                                              Click="AddResource_Click"
                                              ToolTip="添加资源">
                                            <materialDesign:PackIcon Kind="Plus"/>
                                        </Button>
                                    </Grid>

                                    <ItemsControl x:Name="ResourceListControl" Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                      BorderThickness="0,0,0,1" 
                                                      Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox Grid.Column="0" 
                                                               Text="{Binding Name}" 
                                                               materialDesign:HintAssist.Hint="资源名称"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>
                                                        
                                                        <ComboBox Grid.Column="1" 
                                                                SelectedItem="{Binding Type}" 
                                                                materialDesign:HintAssist.Hint="资源类型"
                                                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                                Margin="0,0,8,0">
                                                            <ComboBoxItem Content="矿物"/>
                                                            <ComboBoxItem Content="植物"/>
                                                            <ComboBoxItem Content="动物"/>
                                                            <ComboBoxItem Content="水源"/>
                                                            <ComboBoxItem Content="能量"/>
                                                            <ComboBoxItem Content="特殊"/>
                                                        </ComboBox>
                                                        
                                                        <ComboBox Grid.Column="2" 
                                                                SelectedItem="{Binding Abundance}" 
                                                                materialDesign:HintAssist.Hint="丰富度"
                                                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                                Margin="0,0,8,0">
                                                            <ComboBoxItem Content="稀有"/>
                                                            <ComboBoxItem Content="少量"/>
                                                            <ComboBoxItem Content="普通"/>
                                                            <ComboBoxItem Content="丰富"/>
                                                            <ComboBoxItem Content="极丰"/>
                                                        </ComboBox>

                                                        <Button Grid.Column="3" 
                                                              Style="{StaticResource MaterialDesignIconButton}"
                                                              Click="RemoveResource_Click"
                                                              CommandParameter="{Binding}"
                                                              ToolTip="删除资源">
                                                            <materialDesign:PackIcon Kind="Delete" 
                                                                                   Foreground="{DynamicResource ValidationErrorBrush}"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- 操作按钮 -->
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right" 
                                      Margin="0,16,0,0">
                                <Button Content="保存" 
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Click="SaveMap_Click"
                                      Margin="0,0,8,0"/>
                                <Button Content="取消" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Click="CancelEdit_Click"
                                      Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>

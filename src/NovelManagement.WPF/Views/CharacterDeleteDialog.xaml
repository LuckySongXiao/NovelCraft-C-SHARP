<Window x:Class="NovelManagement.WPF.Views.CharacterDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="删除角色确认"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 警告图标和标题 -->
        <StackPanel Grid.Row="0" 
                  Orientation="Horizontal" 
                  Margin="0,0,0,24">
            <materialDesign:PackIcon Kind="AlertCircle" 
                                   Width="48" Height="48"
                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="删除角色确认" 
                         FontSize="24" 
                         FontWeight="Bold"/>
                <TextBlock Text="此操作不可撤销，请谨慎操作" 
                         FontSize="14" 
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>
        </StackPanel>

        <!-- 角色信息和警告内容 -->
        <StackPanel Grid.Row="1">
            <!-- 要删除的角色信息 -->
            <materialDesign:Card Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 角色头像 -->
                    <Border Grid.Column="0" 
                          Background="{DynamicResource PrimaryHueLightBrush}"
                          CornerRadius="30"
                          Width="60" Height="60"
                          Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="Account" 
                                               Width="36" Height="36"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="White"/>
                    </Border>

                    <!-- 角色信息 -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="CharacterNameText" 
                                 Text="角色姓名" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:Chip x:Name="CharacterTypeChip" 
                                               Content="主角" 
                                               FontSize="12"
                                               Height="24"
                                               Margin="0,0,8,0"/>
                            <materialDesign:Chip x:Name="CharacterFactionChip" 
                                               Content="玄天宗" 
                                               FontSize="12"
                                               Height="24"
                                               Background="{DynamicResource SecondaryHueLightBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="CharacterCultivationText" 
                                 Text="筑基期" 
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- 删除警告信息 -->
            <materialDesign:Card Padding="16" 
                               Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                               Foreground="White">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Warning" 
                                               Width="20" Height="20"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="删除警告" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <TextBlock TextWrapping="Wrap" LineHeight="20">
                        <Run Text="删除此角色将会："/>
                        <LineBreak/>
                        <Run Text="• 永久删除角色的所有信息"/>
                        <LineBreak/>
                        <Run Text="• 删除与其他角色的关系连接"/>
                        <LineBreak/>
                        <Run Text="• 从所有相关剧情中移除"/>
                        <LineBreak/>
                        <Run Text="• 此操作无法撤销"/>
                    </TextBlock>
                </StackPanel>
            </materialDesign:Card>

            <!-- 确认输入 -->
            <materialDesign:Card Padding="16" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="请输入角色姓名以确认删除：" 
                             FontWeight="Medium" 
                             Margin="0,0,0,8"/>
                    <TextBox x:Name="ConfirmNameTextBox"
                           materialDesign:HintAssist.Hint="输入角色姓名确认删除"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           TextChanged="ConfirmNameTextBox_TextChanged"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="0,24,0,0">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                  Content="取消"
                  Margin="0,0,12,0"
                  Click="Cancel_Click"
                  IsCancel="True"/>
            <Button x:Name="DeleteButton"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Content="确认删除"
                  Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                  BorderBrush="{DynamicResource MaterialDesignValidationErrorBrush}"
                  Click="Delete_Click"
                  IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>

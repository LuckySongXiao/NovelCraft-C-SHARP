<Window x:Class="NovelManagement.WPF.Views.ChapterPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="章节预览" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <materialDesign:Card Grid.Row="0" Padding="24,16" Margin="0,0,0,8">
            <DockPanel>
                <!-- 左侧：章节信息 -->
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock x:Name="ChapterTitleText"
                             Text="第45章：天劫降临" 
                             FontSize="24" 
                             FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="WordCountText"
                                 Text="字数: 2,800" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text=" | " 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 Margin="8,0"/>
                        <TextBlock x:Name="StatusText"
                                 Text="状态: 写作中" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text=" | " 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 Margin="8,0"/>
                        <TextBlock x:Name="ImportanceText"
                                 Text="重要性: ★★☆☆☆" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 右侧：操作按钮 -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Click="Export_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Export" Margin="0,0,4,0"/>
                            <TextBlock Text="导出"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Click="Print_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Margin="0,0,4,0"/>
                            <TextBlock Text="打印"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="Close_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Margin="0,0,4,0"/>
                            <TextBlock Text="关闭"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- 主预览区域 -->
        <Grid Grid.Row="1" Margin="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：章节内容预览 -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 预览标题栏 -->
                    <Border Grid.Row="0" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,8">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left"
                                     Text="章节内容" 
                                     FontWeight="Medium"/>
                            <StackPanel DockPanel.Dock="Right" 
                                      Orientation="Horizontal">
                                <ComboBox x:Name="FontSizeComboBox"
                                        Width="80"
                                        SelectedIndex="2"
                                        SelectionChanged="FontSize_Changed">
                                    <ComboBoxItem Content="小"/>
                                    <ComboBoxItem Content="中"/>
                                    <ComboBoxItem Content="大"/>
                                    <ComboBoxItem Content="特大"/>
                                </ComboBox>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- 内容预览区域 -->
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Padding="24">
                        <TextBlock x:Name="ContentPreviewText"
                                 TextWrapping="Wrap"
                                 LineHeight="28"
                                 FontSize="16"
                                 FontFamily="Microsoft YaHei, SimSun"
                                 Text="章节内容将在这里显示..."/>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- 右侧：章节信息面板 -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 章节摘要 -->
                        <TextBlock Text="章节摘要" 
                                 FontSize="16" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,12"/>
                        
                        <TextBlock x:Name="SummaryText"
                                 Text="章节摘要内容..."
                                 TextWrapping="Wrap"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                        <!-- 相关角色 -->
                        <TextBlock Text="相关角色" 
                                 FontSize="14" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,8"/>
                        
                        <TextBlock x:Name="CharactersText"
                                 Text="林轩, 张伟, 神秘老者"
                                 TextWrapping="Wrap"
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 Margin="0,0,0,16"/>

                        <!-- 标签 -->
                        <TextBlock Text="标签" 
                                 FontSize="14" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,8"/>
                        
                        <WrapPanel x:Name="TagsPanel" Margin="0,0,0,16">
                            <!-- 标签将动态添加 -->
                        </WrapPanel>

                        <!-- 统计信息 -->
                        <Separator Margin="0,0,0,16"/>
                        
                        <TextBlock Text="统计信息" 
                                 FontSize="14" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="字数:" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="StatsWordCount" Text="2,800" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="段落:" FontSize="12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="StatsParagraphs" Text="15" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="行数:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="StatsLines" Text="120" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="预计阅读:" FontSize="12"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="StatsReadTime" Text="7分钟" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="完成度:" FontSize="12"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="StatsProgress" Text="100%" FontSize="12" HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- 备注 -->
                        <Separator Margin="0,16,0,16"/>
                        
                        <TextBlock Text="备注" 
                                 FontSize="14" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,8"/>
                        
                        <TextBlock x:Name="NotesText"
                                 Text="注意描写主角的心理变化"
                                 TextWrapping="Wrap"
                                 FontSize="12"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="2" 
              Background="{DynamicResource MaterialDesignDivider}" 
              Padding="16,8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                         x:Name="PreviewModeText"
                         Text="预览模式: 阅读视图" 
                         FontSize="12"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                <TextBlock DockPanel.Dock="Right"
                         x:Name="LastModifiedText"
                         Text="最后修改: 2024-01-15 14:30" 
                         FontSize="12"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

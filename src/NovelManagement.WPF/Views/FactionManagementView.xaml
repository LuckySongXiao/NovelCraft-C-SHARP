<UserControl x:Class="NovelManagement.WPF.Views.FactionManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="势力管理" 
                     FontSize="32" 
                     FontWeight="Bold" 
                     Margin="0,0,0,8"/>
            <TextBlock Text="管理小说中的势力组织和关系网络" 
                     FontSize="16" 
                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- 操作工具栏 -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,12,0"
                            Click="NewFaction_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0"/>
                            <TextBlock Text="新建势力"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,12,0"
                            Click="ImportFactions_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Import" Margin="0,0,8,0"/>
                            <TextBlock Text="导入势力"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,12,0"
                            Click="ExportFactions_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Export" Margin="0,0,8,0"/>
                            <TextBlock Text="导出势力"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,12,0"
                            Click="ViewRelationshipNetwork_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="GraphOutline" Margin="0,0,8,0"/>
                            <TextBlock Text="关系网络"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,12,0"
                            Background="{DynamicResource SecondaryHueMidBrush}"
                            Click="AIAnalysisFaction_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Brain" Margin="0,0,8,0"/>
                            <TextBlock Text="AI分析"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 筛选和搜索 -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <ComboBox x:Name="FactionTypeFilter"
                            materialDesign:HintAssist.Hint="势力类型"
                            Width="120"
                            Margin="0,0,12,0"
                            SelectionChanged="FactionTypeFilter_SelectionChanged">
                        <ComboBoxItem Content="全部"/>
                        <ComboBoxItem Content="宗门"/>
                        <ComboBoxItem Content="家族"/>
                        <ComboBoxItem Content="组织"/>
                        <ComboBoxItem Content="国家"/>
                        <ComboBoxItem Content="商会"/>
                    </ComboBox>
                    
                    <ComboBox x:Name="PowerLevelFilter"
                            materialDesign:HintAssist.Hint="实力等级"
                            Width="120"
                            Margin="0,0,12,0"
                            SelectionChanged="PowerLevelFilter_SelectionChanged">
                        <ComboBoxItem Content="全部"/>
                        <ComboBoxItem Content="超级"/>
                        <ComboBoxItem Content="一流"/>
                        <ComboBoxItem Content="二流"/>
                        <ComboBoxItem Content="三流"/>
                        <ComboBoxItem Content="普通"/>
                    </ComboBox>
                    
                    <TextBox x:Name="SearchTextBox"
                           materialDesign:HintAssist.Hint="搜索势力..."
                           materialDesign:TextFieldAssist.HasLeadingIcon="True"
                           materialDesign:TextFieldAssist.LeadingIcon="Search"
                           Width="200"
                           TextChanged="SearchTextBox_TextChanged"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- 主内容区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：势力列表 -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列表标题 -->
                    <Border Grid.Row="0" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,12">
                        <DockPanel>
                            <TextBlock Text="势力列表" FontWeight="Medium" DockPanel.Dock="Left"/>
                            <ToggleButton x:Name="HierarchyViewToggle"
                                        Style="{StaticResource MaterialDesignActionToggleButton}"
                                        ToolTip="层级视图"
                                        DockPanel.Dock="Right"
                                        IsChecked="False"
                                        Checked="ViewMode_Changed"
                                        Unchecked="ViewMode_Changed">
                                <materialDesign:PackIcon Kind="FileTree"/>
                            </ToggleButton>
                        </DockPanel>
                    </Border>

                    <!-- 势力列表 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="FactionListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                          BorderThickness="0,0,0,1" 
                                          Padding="16,12"
                                          Background="Transparent"
                                          Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectFactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 势力图标 -->
                                            <Border Grid.Column="0" 
                                                  Background="{Binding IconColor}"
                                                  CornerRadius="20"
                                                  Width="40" Height="40"
                                                  Margin="0,0,12,0">
                                                <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                                                       Width="24" Height="24"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="White"/>
                                            </Border>

                                            <!-- 势力信息 -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="Medium" 
                                                         FontSize="14"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <materialDesign:Chip Content="{Binding Type}" 
                                                                       FontSize="10"
                                                                       Height="20"
                                                                       Margin="0,0,4,0"/>
                                                    <materialDesign:Chip Content="{Binding PowerLevel}" 
                                                                       FontSize="10"
                                                                       Height="20"
                                                                       Background="{Binding PowerLevelColor}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding MemberCount, StringFormat='成员: {0}人'}" 
                                                         FontSize="12"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- 状态指示 -->
                                            <materialDesign:PackIcon Grid.Column="2" 
                                                                   Kind="ChevronRight"
                                                                   Width="16" Height="16"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- 右侧：势力详细信息 -->
            <Grid Grid.Column="2" x:Name="DetailArea">
                <!-- 默认显示势力统计信息 -->
                <materialDesign:Card Padding="24" x:Name="DefaultCard">
                    <StackPanel>
                        <TextBlock Text="势力统计" 
                                 FontSize="24" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,24"/>

                        <!-- 统计卡片 -->
                        <UniformGrid Columns="2" Margin="0,0,0,24">
                            <materialDesign:Card Margin="0,0,8,8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="总势力数" 
                                             FontSize="14" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="12" 
                                             FontSize="32" 
                                             FontWeight="Bold"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Margin="8,0,0,8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="宗门势力" 
                                             FontSize="14" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="5" 
                                             FontSize="32" 
                                             FontWeight="Bold"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Margin="0,8,8,0" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="家族势力" 
                                             FontSize="14" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="4" 
                                             FontSize="32" 
                                             FontWeight="Bold"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Margin="8,8,0,0" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="关系数量" 
                                             FontSize="14" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="28" 
                                             FontSize="32" 
                                             FontWeight="Bold"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </UniformGrid>

                        <!-- 实力等级分布 -->
                        <TextBlock Text="实力等级分布" 
                                 FontSize="18" 
                                 FontWeight="Medium" 
                                 Margin="0,0,0,16"/>

                        <ItemsControl>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:Chip Grid.Column="0" Content="超级势力" Margin="0,0,12,0" Background="#F44336"/>
                                <ProgressBar Grid.Column="1" Value="2" Maximum="12" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="2" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:Chip Grid.Column="0" Content="一流势力" Margin="0,0,12,0" Background="#FF9800"/>
                                <ProgressBar Grid.Column="1" Value="3" Maximum="12" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="3" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:Chip Grid.Column="0" Content="二流势力" Margin="0,0,12,0" Background="#4CAF50"/>
                                <ProgressBar Grid.Column="1" Value="4" Maximum="12" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="4" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:Chip Grid.Column="0" Content="三流势力" Margin="0,0,12,0" Background="#2196F3"/>
                                <ProgressBar Grid.Column="1" Value="3" Maximum="12" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="3" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

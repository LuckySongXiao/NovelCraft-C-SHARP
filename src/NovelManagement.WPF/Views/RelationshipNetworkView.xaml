<UserControl x:Class="NovelManagement.WPF.Views.RelationshipNetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountGroup" 
                                           Width="24" Height="24" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                    <TextBlock Text="关系网络" 
                             FontSize="20" 
                             FontWeight="Medium" 
                             VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="网络分析"
                            Click="NetworkAnalysis_Click"
                            Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="ChartLine"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="导出网络图"
                            Click="ExportNetwork_Click"
                            Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="Export"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="设置"
                            Click="Settings_Click">
                        <materialDesign:PackIcon Kind="Settings"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- 工具栏 -->
        <materialDesign:Card Grid.Row="1" Margin="16,16,16,8" Padding="16">
            <DockPanel>
                <!-- 左侧：筛选和搜索 -->
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <!-- 关系类型筛选 -->
                    <ComboBox x:Name="RelationshipTypeFilter"
                            materialDesign:HintAssist.Hint="关系类型"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Width="120"
                            Margin="0,0,12,0"
                            SelectedIndex="0"
                            SelectionChanged="RelationshipTypeFilter_SelectionChanged">
                        <ComboBoxItem Content="全部关系"/>
                        <ComboBoxItem Content="亲情关系"/>
                        <ComboBoxItem Content="爱情关系"/>
                        <ComboBoxItem Content="友情关系"/>
                        <ComboBoxItem Content="师徒关系"/>
                        <ComboBoxItem Content="敌对关系"/>
                        <ComboBoxItem Content="合作关系"/>
                        <ComboBoxItem Content="从属关系"/>
                    </ComboBox>

                    <!-- 势力筛选 -->
                    <ComboBox x:Name="FactionFilter"
                            materialDesign:HintAssist.Hint="势力筛选"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            Width="120"
                            Margin="0,0,12,0"
                            SelectedIndex="0"
                            SelectionChanged="FactionFilter_SelectionChanged">
                        <ComboBoxItem Content="全部势力"/>
                        <ComboBoxItem Content="玄天宗"/>
                        <ComboBoxItem Content="魔道联盟"/>
                        <ComboBoxItem Content="散修"/>
                        <ComboBoxItem Content="皇室"/>
                    </ComboBox>

                    <!-- 搜索框 -->
                    <TextBox x:Name="SearchTextBox"
                           materialDesign:HintAssist.Hint="搜索角色或关系"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Width="200"
                           Margin="0,0,12,0"
                           TextChanged="SearchTextBox_TextChanged">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <!-- 右侧：操作按钮 -->
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Click="AddRelationship_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Margin="0,0,4,0"/>
                            <TextBlock Text="添加关系"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Click="AutoDetectRelationships_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AutoFix" Margin="0,0,4,0"/>
                            <TextBlock Text="智能检测"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"
                            Click="ShowAllCharacters_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" Margin="0,0,4,0"/>
                            <TextBlock Text="显示全部"/>
                        </StackPanel>
                    </Button>

                    <ToggleButton x:Name="LayoutModeToggle"
                                Style="{StaticResource MaterialDesignActionToggleButton}"
                                ToolTip="切换布局模式"
                                IsChecked="False"
                                Checked="LayoutMode_Changed"
                                Unchecked="LayoutMode_Changed">
                        <materialDesign:PackIcon Kind="GraphOutline"/>
                    </ToggleButton>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- 主内容区域 -->
        <Grid Grid.Row="2" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：角色列表 -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列表标题 -->
                    <Border Grid.Row="0" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,12">
                        <DockPanel>
                            <TextBlock Text="角色列表" FontWeight="Medium" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="CharacterCountLabel" 
                                     Text="(0个角色)"
                                     FontSize="12"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     DockPanel.Dock="Right"/>
                        </DockPanel>
                    </Border>

                    <!-- 角色列表 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CharacterListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                          BorderThickness="0,0,0,1" 
                                          Padding="16,12"
                                          Background="Transparent"
                                          Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectCharacterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 角色头像 -->
                                            <Border Grid.Column="0" 
                                                  Width="40" Height="40"
                                                  CornerRadius="20"
                                                  Background="{DynamicResource PrimaryHueMidBrush}"
                                                  Margin="0,0,12,0">
                                                <TextBlock Text="{Binding InitialLetter}" 
                                                         Foreground="White"
                                                         FontWeight="Medium"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- 角色信息 -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="Medium" 
                                                         FontSize="14"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <materialDesign:Chip Content="{Binding Type}" 
                                                                       FontSize="10"
                                                                       Height="20"
                                                                       Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Faction}" 
                                                             FontSize="12"
                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                             VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding RelationshipCount, StringFormat=\{0\}个关系}"
                                                         FontSize="11"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- 连接数指示 -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <Ellipse Width="8" Height="8" 
                                                       Fill="{Binding ConnectionStrengthColor}"/>
                                                <TextBlock Text="{Binding ConnectionCount}" 
                                                         FontSize="10"
                                                         HorizontalAlignment="Center"
                                                         Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <!-- 分隔符 -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Stretch" 
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- 中间：关系网络图 -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 网络图标题 -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="关系网络图" 
                                 FontSize="16" 
                                 FontWeight="Medium" 
                                 DockPanel.Dock="Left"/>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                  ToolTip="重新布局"
                                  Click="RelayoutNetwork_Click"
                                  Margin="0,0,4,0">
                                <materialDesign:PackIcon Kind="Refresh"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                  ToolTip="适应窗口"
                                  Click="FitToWindow_Click"
                                  Margin="0,0,4,0">
                                <materialDesign:PackIcon Kind="FitToPage"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                  ToolTip="全屏显示"
                                  Click="FullScreen_Click">
                                <materialDesign:PackIcon Kind="Fullscreen"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <!-- 网络图画布 -->
                    <Border Grid.Row="1" 
                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                          BorderThickness="1"
                          Background="White">
                        <ScrollViewer x:Name="NetworkScrollViewer"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Auto">
                            <Canvas x:Name="NetworkCanvas"
                                  Width="800"
                                  Height="600"
                                  Background="Transparent"
                                  MouseLeftButtonDown="NetworkCanvas_MouseLeftButtonDown"
                                  MouseMove="NetworkCanvas_MouseMove"
                                  MouseLeftButtonUp="NetworkCanvas_MouseLeftButtonUp"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 分隔符 -->
            <GridSplitter Grid.Column="3" 
                          HorizontalAlignment="Stretch" 
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- 右侧：关系详情 -->
            <materialDesign:Card Grid.Column="4" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 详情标题 -->
                    <TextBlock Grid.Row="0" 
                             Text="关系详情" 
                             FontSize="16" 
                             FontWeight="Medium" 
                             Margin="0,0,0,16"/>

                    <!-- 详情内容 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="RelationshipDetailPanel">
                            <TextBlock Text="请选择角色或关系查看详情" 
                                     FontStyle="Italic"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Vertical"
                              Margin="0,16,0,0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                              Margin="0,0,0,8"
                              Click="EditRelationship_Click"
                              IsEnabled="False"
                              x:Name="EditRelationshipButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Edit" Margin="0,0,4,0"/>
                                <TextBlock Text="编辑关系"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                              Margin="0,0,0,8"
                              Click="DeleteRelationship_Click"
                              IsEnabled="False"
                              x:Name="DeleteRelationshipButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Margin="0,0,4,0"/>
                                <TextBlock Text="删除关系"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                              Click="ViewCharacterDetails_Click"
                              IsEnabled="False"
                              x:Name="ViewCharacterButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Account" Margin="0,0,4,0"/>
                                <TextBlock Text="查看角色"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="NovelManagement.WPF.Views.PetSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}" 
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="PawOutline" 
                                           Foreground="White" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"/>
                    <TextBlock Text="宠物体系管理" 
                             Foreground="White" 
                             FontSize="24" 
                             FontWeight="Medium" 
                             VerticalAlignment="Center" 
                             Margin="16,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="AddPet_Click"
                            ToolTip="新建宠物">
                        <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                            Foreground="White" 
                            Margin="8,0"
                            Click="ImportPet_Click"
                            ToolTip="导入宠物数据">
                        <materialDesign:PackIcon Kind="Import" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="ExportPet_Click"
                            ToolTip="导出宠物数据">
                        <materialDesign:PackIcon Kind="Export" Width="24" Height="24"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            Foreground="White"
                            Margin="8,0"
                            Click="AIAssistant_Click"
                            ToolTip="AI助手">
                        <materialDesign:PackIcon Kind="Brain" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：宠物列表 -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 搜索栏 -->
                    <Border Grid.Row="0" Padding="16,16,16,8">
                        <TextBox x:Name="SearchTextBox"
                                materialDesign:HintAssist.Hint="搜索宠物..."
                                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextChanged="SearchTextBox_TextChanged"/>
                    </Border>

                    <!-- 筛选器 -->
                    <Border Grid.Row="1" Padding="16,0,16,8">
                        <StackPanel>
                            <ComboBox x:Name="PetTypeFilterComboBox"
                                     materialDesign:HintAssist.Hint="宠物类型"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectionChanged="PetTypeFilter_SelectionChanged"
                                     Margin="0,0,0,8">
                                <ComboBoxItem Content="全部类型"/>
                                <ComboBoxItem Content="灵兽"/>
                                <ComboBoxItem Content="妖兽"/>
                                <ComboBoxItem Content="神兽"/>
                                <ComboBoxItem Content="魔兽"/>
                                <ComboBoxItem Content="仙兽"/>
                                <ComboBoxItem Content="凶兽"/>
                                <ComboBoxItem Content="异兽"/>
                            </ComboBox>
                            <ComboBox x:Name="RarityFilterComboBox"
                                     materialDesign:HintAssist.Hint="稀有度"
                                     Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                     SelectionChanged="RarityFilter_SelectionChanged">
                                <ComboBoxItem Content="全部稀有度"/>
                                <ComboBoxItem Content="普通"/>
                                <ComboBoxItem Content="稀有"/>
                                <ComboBoxItem Content="史诗"/>
                                <ComboBoxItem Content="传说"/>
                                <ComboBoxItem Content="神话"/>
                                <ComboBoxItem Content="至尊"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- 宠物列表 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="PetListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                          BorderThickness="0,0,0,1" 
                                          Padding="16,12"
                                          Background="Transparent"
                                          Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding DataContext.SelectPetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Grid.Column="0" 
                                                                       Kind="PawOutline" 
                                                                       Width="20" 
                                                                       Height="20" 
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                                
                                                <TextBlock Grid.Column="1" 
                                                         Text="{Binding Name}" 
                                                         FontWeight="Medium" 
                                                         FontSize="14"
                                                         Margin="8,0,0,0"
                                                         VerticalAlignment="Center"/>

                                                <Border Grid.Column="2" 
                                                      Background="{DynamicResource PrimaryHueLightBrush}"
                                                      CornerRadius="8"
                                                      Padding="6,2">
                                                    <TextBlock Text="{Binding Rarity}" 
                                                             Foreground="White" 
                                                             FontSize="10"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Grid.Row="1" 
                                                     Text="{Binding Description}" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     FontSize="12"
                                                     Margin="28,4,0,0"
                                                     TextWrapping="Wrap"/>

                                            <StackPanel Grid.Row="2" 
                                                      Orientation="Horizontal" 
                                                      Margin="28,4,0,0">
                                                <TextBlock Text="类型: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding Type}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                                <TextBlock Text=" | 等级: " 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Margin="8,0,0,0"/>
                                                <TextBlock Text="{Binding Level}" 
                                                         FontSize="11" 
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         FontWeight="Medium"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 统计信息 -->
                    <Border Grid.Row="3" 
                          Background="{DynamicResource MaterialDesignDivider}" 
                          Padding="16,8">
                        <StackPanel>
                            <TextBlock Text="宠物统计" 
                                     FontWeight="Medium" 
                                     FontSize="12" 
                                     Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="总数量: "/>
                                        <Run Text="{Binding TotalCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="灵兽: "/>
                                        <Run Text="{Binding SpiritBeastCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="神兽: "/>
                                        <Run Text="{Binding DivineBeastCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <Run Text="传说级: "/>
                                        <Run Text="{Binding LegendaryCount}" FontWeight="Medium"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 右侧：宠物详情编辑区域 -->
            <materialDesign:Card Grid.Column="1" Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailPanel" Margin="24">
                        <!-- 默认提示 -->
                        <StackPanel x:Name="EmptyStatePanel" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Visibility="Visible">
                            <materialDesign:PackIcon Kind="PawOutline" 
                                                   Width="64" 
                                                   Height="64" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock Text="选择一个宠物查看详情" 
                                     FontSize="16" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,16,0,0"/>
                            <TextBlock Text="或点击上方的 + 按钮创建新的宠物" 
                                     FontSize="14" 
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center" 
                                     Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- 宠物详情编辑面板 -->
                        <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                            <!-- 基本信息 -->
                            <TextBlock Text="基本信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="PetNameTextBox"
                                        materialDesign:HintAssist.Hint="宠物名称"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>

                                <ComboBox Grid.Column="2"
                                         x:Name="PetTypeComboBox"
                                         materialDesign:HintAssist.Hint="宠物类型"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="灵兽"/>
                                    <ComboBoxItem Content="妖兽"/>
                                    <ComboBoxItem Content="神兽"/>
                                    <ComboBoxItem Content="魔兽"/>
                                    <ComboBoxItem Content="仙兽"/>
                                    <ComboBoxItem Content="凶兽"/>
                                    <ComboBoxItem Content="异兽"/>
                                </ComboBox>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                         x:Name="RarityComboBox"
                                         materialDesign:HintAssist.Hint="稀有度"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="普通"/>
                                    <ComboBoxItem Content="稀有"/>
                                    <ComboBoxItem Content="史诗"/>
                                    <ComboBoxItem Content="传说"/>
                                    <ComboBoxItem Content="神话"/>
                                    <ComboBoxItem Content="至尊"/>
                                </ComboBox>

                                <TextBox Grid.Column="2"
                                        x:Name="LevelTextBox"
                                        materialDesign:HintAssist.Hint="等级"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="ElementTextBox"
                                        materialDesign:HintAssist.Hint="元素属性"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Margin="0,0,0,16"/>

                                <ComboBox Grid.Column="2"
                                         x:Name="GrowthStageComboBox"
                                         materialDesign:HintAssist.Hint="成长阶段"
                                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="幼体"/>
                                    <ComboBoxItem Content="成长期"/>
                                    <ComboBoxItem Content="成熟期"/>
                                    <ComboBoxItem Content="完全体"/>
                                    <ComboBoxItem Content="究极体"/>
                                </ComboBox>
                            </Grid>

                            <TextBox x:Name="PetDescriptionTextBox"
                                    materialDesign:HintAssist.Hint="宠物描述"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinLines="3"
                                    MaxLines="5"
                                    Margin="0,0,0,24"/>

                            <!-- 属性信息 -->
                            <TextBlock Text="属性信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="AttackTextBox"
                                        materialDesign:HintAssist.Hint="攻击力"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="2"
                                        x:Name="DefenseTextBox"
                                        materialDesign:HintAssist.Hint="防御力"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="4"
                                        x:Name="HealthTextBox"
                                        materialDesign:HintAssist.Hint="生命值"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </Grid>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="SpeedTextBox"
                                        materialDesign:HintAssist.Hint="速度"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="2"
                                        x:Name="ManaTextBox"
                                        materialDesign:HintAssist.Hint="法力值"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="4"
                                        x:Name="LoyaltyTextBox"
                                        materialDesign:HintAssist.Hint="忠诚度"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </Grid>

                            <!-- 技能系统 -->
                            <TextBlock Text="技能系统" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                  BorderThickness="1" 
                                  CornerRadius="4" 
                                  Padding="16"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                 Text="技能列表" 
                                                 FontWeight="Medium"/>
                                        
                                        <Button Grid.Column="1" 
                                              Style="{StaticResource MaterialDesignIconButton}"
                                              Click="AddSkill_Click"
                                              ToolTip="添加技能">
                                            <materialDesign:PackIcon Kind="Plus"/>
                                        </Button>
                                    </Grid>

                                    <ItemsControl x:Name="SkillListControl" Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                      BorderThickness="0,0,0,1" 
                                                      Padding="0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox Grid.Column="0" 
                                                               Text="{Binding Name}" 
                                                               materialDesign:HintAssist.Hint="技能名称"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>
                                                        
                                                        <ComboBox Grid.Column="1" 
                                                                SelectedItem="{Binding Type}" 
                                                                materialDesign:HintAssist.Hint="技能类型"
                                                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                                Margin="0,0,8,0">
                                                            <ComboBoxItem Content="攻击"/>
                                                            <ComboBoxItem Content="防御"/>
                                                            <ComboBoxItem Content="治疗"/>
                                                            <ComboBoxItem Content="辅助"/>
                                                            <ComboBoxItem Content="特殊"/>
                                                        </ComboBox>
                                                        
                                                        <TextBox Grid.Column="2" 
                                                               Text="{Binding Level}" 
                                                               materialDesign:HintAssist.Hint="技能等级"
                                                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                               Margin="0,0,8,0"/>

                                                        <Button Grid.Column="3" 
                                                              Style="{StaticResource MaterialDesignIconButton}"
                                                              Click="RemoveSkill_Click"
                                                              CommandParameter="{Binding}"
                                                              ToolTip="删除技能">
                                                            <materialDesign:PackIcon Kind="Delete" 
                                                                                   Foreground="{DynamicResource ValidationErrorBrush}"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- 进化信息 -->
                            <TextBlock Text="进化信息" 
                                     FontSize="18" 
                                     FontWeight="Medium" 
                                     Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                        x:Name="EvolutionFromTextBox"
                                        materialDesign:HintAssist.Hint="进化前形态"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                <TextBox Grid.Column="2"
                                        x:Name="EvolutionToTextBox"
                                        materialDesign:HintAssist.Hint="进化后形态"
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </Grid>

                            <TextBox x:Name="EvolutionConditionTextBox"
                                    materialDesign:HintAssist.Hint="进化条件"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    MinLines="2"
                                    MaxLines="4"
                                    Margin="0,0,0,24"/>

                            <!-- 操作按钮 -->
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right" 
                                      Margin="0,16,0,0">
                                <Button Content="保存" 
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Click="SavePet_Click"
                                      Margin="0,0,8,0"/>
                                <Button Content="取消" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Click="CancelEdit_Click"
                                      Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>

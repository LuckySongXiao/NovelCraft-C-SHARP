<Window x:Class="NovelManagement.WPF.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="小说管理系统 - 界面测试" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}" 
                Padding="16,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="界面测试" 
                         Foreground="White" 
                         FontSize="20" 
                         FontWeight="Medium" 
                         VerticalAlignment="Center" 
                         Margin="0,0,32,0"/>

                <!-- 界面测试按钮 -->
                <Button Content="装备体系" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="8,0"
                        Click="TestEquipmentSystem_Click"/>
                
                <Button Content="功法体系" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="8,0"
                        Click="TestTechniqueSystem_Click"/>
                
                <Button Content="商业体系" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="8,0"
                        Click="TestBusinessSystem_Click"/>
                
                <Button Content="时间线" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="8,0"
                        Click="TestTimeline_Click"/>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                Margin="16">
            <Grid x:Name="MainContentArea">
                <!-- 默认欢迎界面 -->
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="TestTube" 
                                           Width="64" 
                                           Height="64" 
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="界面功能测试" 
                             FontSize="24" 
                             FontWeight="Medium" 
                             HorizontalAlignment="Center" 
                             Margin="0,16,0,0"/>
                    <TextBlock Text="点击上方按钮测试不同的界面功能" 
                             FontSize="16" 
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             HorizontalAlignment="Center" 
                             Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
